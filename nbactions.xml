<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.6.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath ch.fhnw.lernstickwelcome.controller.WelcomeApplication</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.6.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath ch.fhnw.lernstickwelcome.controller.WelcomeApplication</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.6.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath ch.fhnw.lernstickwelcome.controller.WelcomeApplication</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-sort-strings</actionName>
            <displayName>sort-strings</displayName>
            <goals>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.6.0:exec</goal>
            </goals>
            <properties>
                <exec.args>./sort_strings.sh</exec.args>
                <exec.executable>bash</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-check-strings</actionName>
            <displayName>check-strings</displayName>
            <goals>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.6.0:exec</goal>
            </goals>
            <properties>
                <exec.args>./check_strings.sh</exec.args>
                <exec.executable>bash</exec.executable>
            </properties>
        </action>
    </actions>
